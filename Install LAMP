APACHE2

// update package repository
sudo apt-get update

// install apache2
sudo apt-get install apache2

//check apache2 status
sudo service apache2 status

//make sure the ufw firewall has a profile for apache2
sudo ufw app list

// Check profile allows traffic on ports 80 and 443
sudo ufw app info “Apache Full”

// identify servers public ip address
sudo apt-get install curl

MYSQL

sudo apt-get install mysql-server

// set up the security for MySQL - pw: paul
sudo mysql_secure_installation

// open mysql prompt
sudo mysql

// create user 
CREATE USER 'paul'@'localhost' IDENTIFIED BY 'paul';

//grant user privaleges
GRANT ALL PRIVILEGES ON *.* TO 'paul'@'localhost' WITH GRANT OPTION;

// clear cache
FLUSH PRIVILEGES;

// to exit
exit

// to log in to mysql
mysql -u paul -p

// check mysql is running
systemctl status mysql.service

PHP

// install PHP
sudo apt-get install php libapache2-mod-php php-mysql 

// open conf file to set .php as first file apache will serve
sudo nano /etc/apache2/mods-enabled/dir.conf

// create a php file to test install
sudo nano /var/www/html/info.php

// in browser nav to http://127.0.0.1/info.php to test

PHPMYADMIN

// install php and phpmyadmin packages
sudo apt install phpmyadmin php-mbstring php-zip php-gd php-json php-curl

1st - hit space tab then enter.

log in with un and pw set earlier


